html, body, #app
  height: 100%

#app
  display: flex
  flex-direction: column

.app__layout
  flex: 1
  display: flex
  height: 100%
  .container
    flex: 1
    overflow: auto
    padding: 10px
    height: 100%

    .ivu-table th
      background-color: #033365
      color: #fff
      border: 1px solid #033365

    .ivu-checkbox-group
      color: #2d8cf0

  .app__map
    flex: 1
    height: 100%
.log-out
    position: absolute
    bottom: 0
    left: 0
    .ivu-btn
      width: 150px
      border-radius: 0px
    .ivu-tooltip
      margin-left: 0px
      padding: 14px